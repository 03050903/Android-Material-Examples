<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="MaterialExamplesTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:windowBackground">@color/gray_light</item>

		<!-- android transitions -->
		<item name="android:windowContentTransitions">true</item>
		<item name="android:windowAllowEnterTransitionOverlap">true</item>
		<item name="android:windowAllowReturnTransitionOverlap">true</item>
		<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
	</style>

	<style name="MainActivityTheme" parent="MaterialExamplesTheme">
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="ColorActivityTheme" parent="MaterialExamplesTheme">
		<item name="android:windowTranslucentStatus">true</item>

	</style>

	<style name="ColorActivityTheme2" parent="MaterialExamplesTheme">
		<item name="android:windowBackground">@color/accent</item>
		<item name="colorPrimaryDark">@color/accent_dark</item>
	</style>

</resources>