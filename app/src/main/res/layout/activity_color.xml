<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="false"
	tools:context="com.saulmm.material.activities.ColorActivity"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/activity.color.toolbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/toolbar_height_x2"
		android:background="?colorPrimary"
		android:elevation="10dp"
		style="@style/ToolBar.WithNavigationBack"
		android:fitsSystemWindows="false"
		app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
		>

		<TextView
			android:layout_width="match_parent"
			android:layout_height="@dimen/toolbar_height"
			android:layout_weight="1"
			style="@style/TextAppearance.AppCompat.Title.Inverse"
			android:text="Reveal activity 1"
			android:gravity="center_vertical"
			android:layout_gravity="bottom"
			/>

	</android.support.v7.widget.Toolbar>


	<android.support.design.widget.FloatingActionButton
		android:id="@+id/activity.color.fab"
		android:layout_width="@dimen/fab_size"
		android:layout_height="@dimen/fab_size"
		android:layout_below="@+id/activity.color.toolbar"
		android:layout_alignParentRight="true"
		android:layout_marginTop="-26dp"
		android:layout_gravity="right"
		android:layout_marginRight="@dimen/spacing_normal"
		android:onClick="start"
		app:elevation="12dp"
		app:pressedTranslationZ="15dp"
		app:borderWidth="0dp"
		tools:ignore="RtlHardcoded"
		/>
</RelativeLayout>
