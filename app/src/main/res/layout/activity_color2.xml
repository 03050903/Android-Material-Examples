<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/activity.color2.container"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/activity.color2.toolbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/toolbar_height"
		app:title="@string/title_reveal_activity2"
		style="@style/ToolBar.WithNavigationBack"
	    app:theme="@style/ThemeOverlay.AppCompat.Light"
	    />

	<TextView
		android:id="@+id/activity.color2.explanation.textview"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="@dimen/spacing_medium"
		android:lineSpacingExtra="5dp"
		android:text="@string/reveal_explanation"
		/>
</LinearLayout>