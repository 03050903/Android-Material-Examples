<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray_light"
	style="@style/MaterialExamples.ViewGroup.Small"
	>

	<android.support.v7.widget.CardView
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:id="@+id/fragment.home.main.cardview"
		android:layout_gravity="center"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="4dp"
		tools:elevation="8dp"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="224dp"
				android:background="@drawable/material_devices"
				android:scaleType="centerCrop"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="@dimen/spacing_small"
				android:lineSpacingExtra="4dp"
				android:text="This project focuses on different concepts and examples to illustrate the 'visual language' material design.

We challenged ourselves to create a visual language for our users That synthesizes the classic principles of good design with the Possibility of innovation and technology and science. This is material design."
				/>



		</LinearLayout>


	</android.support.v7.widget.CardView>

</LinearLayout>